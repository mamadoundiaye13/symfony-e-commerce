{% extends 'base.html.twig' %}
{% block title %}Home!{% endblock %}

{% block body %}

    <section class="">
        <article class="bg-light">
            <div class="container-fluid p-5 mb-5 bg-white text-uppercase text-justify">
                <img src="{{ article.getPhoto() }}" alt="img">
                <h3> {{ article.getTitle() }}</h3>

                <h6> {{ article.getDescription() }}</h6>

                <h1> {{ article.getPrice()}} â‚¬</h1>

                <p class="float-right text-success"> {{ article.getNombreDeStockRestant()}} produits restants</p>

                <a href="{{ path('panier')}}" class="btn btn-primary"> Acheter </a>

            </div>

        </article>

        <section id="commentaires" >

            <div class="">
                <h1 class="bg-light"> Nouveau Commentaire</h1>
                {{ form_start(commentForm) }}
                {{ form_row(commentForm.content, {
                    'attr': {
                        'placeholder': "Ajouter un Commentaire public"
                    }
                }) }}

                <button type="submit" class="btn btn-success">Comenter</button>
                {{ form_end(commentForm) }}
            </div>


            <div >
                <h1 class="bg-light"> {{ article.comments | length }} Commentaires</h1>
                {% for comment in article.comments %}
                    <div class="comment">
                        <div class="row">
                            <div class="col-2">
                                {{ comment.author }}

                            </div>
                            <div class="col">
                                {{ comment.content | raw }}

                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>


        </section>

    </section>
{% endblock %}