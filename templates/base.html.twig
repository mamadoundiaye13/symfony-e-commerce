                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('maison') }}">Maison</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('promos') }}">Promotions</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('favoris') }}"> Favoris </a>
                        </li>
                    {% endif %}

                    {% if app.user and (app.user.getAdmin() == 1) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_create') }}"> Ajouter un article</a>
                        </li>
                    {% endif %}



                </ul>

                <form action="{{ path('search') }}" method="post" class="form-inline my-2 my-lg-0 col-lg-4">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>

            <div>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('panier') }}"> panier</a>
                    </li>
                {% endif %}
            </div>

            <div class="nav-justified navbar-text navbar-collapse>
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}"> Connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item float-right" >
                            <a class="nav-link" href="#"> {{ app.user.getUsername() }} </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}"> Deconnexion</a>
                        </li>
                    {% endif %}

            </div>

        </nav>

